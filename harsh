<script>
// Typing animation for roles
const roleList = ["Data Analyst","Business Analyst","PL/SQL Developer"];
let roleIndex = 0;
let charIndex = 0;
const roleText = document.getElementById("role-text");
const typingSpeed = 100;
const erasingSpeed = 50;
const delayBetweenRoles = 2000;

function typeRole(){
  if(charIndex < roleList[roleIndex].length){
    roleText.textContent += roleList[roleIndex].charAt(charIndex);
    charIndex++;
    setTimeout(typeRole, typingSpeed);
  } else {
    setTimeout(eraseRole, delayBetweenRoles);
  }
}

function eraseRole(){
  if(charIndex > 0){
    roleText.textContent = roleList[roleIndex].substring(0, charIndex - 1);
    charIndex--;
    setTimeout(eraseRole, erasingSpeed);
  } else {
    roleIndex = (roleIndex + 1) % roleList.length;
    setTimeout(typeRole, typingSpeed);
  }
}

document.addEventListener("DOMContentLoaded", () => {
  setTimeout(typeRole, 500);

  // Scroll reveal for sections and cards
  const elements = document.querySelectorAll("section, .card");
  window.addEventListener("scroll", () => {
    elements.forEach(el => {
      const rect = el.getBoundingClientRect();
      if(rect.top < window.innerHeight - 50){
        el.classList.add("show");
      }
    });
  });

  // Footer year
  document.getElementById("year").textContent = new Date().getFullYear();
});
</script>

